<%= form_for create_todo do |f| %>
  <%= f.hidden_field :creator_id, value: create_todo.creator_id %>
  <div class='field'>
    <p class='control'>
      <%= f.text_field :title, class:'input is-normal', placeholder: "新的任务" %>
    </p>
  </div>
  <div class='field'>
    <%= f.submit "创建任务", class: 'button is-primary is-medium' %>
  </div>
<% end %>
